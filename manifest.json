{
  "manifest_version": 3,
  "name": "Client Helper v3",
  "version": "3.0",
  "description": "View and edit client credentials from Google Sheets directly in your browser.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>", "https://script.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sidebar.js"],
      "css": ["sidebar.css"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
